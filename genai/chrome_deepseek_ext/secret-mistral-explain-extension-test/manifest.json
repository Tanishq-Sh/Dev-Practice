{
  "manifest_version": 3,
  "name": "Mistral Text Explainer",
  "version": "1.0",
  "description": "Select text and get an explanation from the Mistral API.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
